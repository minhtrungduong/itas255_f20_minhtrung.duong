	<% if (house) { %>
	  value="<%= house.address %>"
	<% } %>
  >
  </br>

  <label class="form-label input-required" for="Price">Price</label>
  <input type="number" placeholder="number" name="price"

	<% if (house) { %>
	  value="<%= house.price %>"
	<% } %>

  >
</br>

  <label class="form-label input-required" for="Size">Size</label>
  <input type="number" placeholder="number" name="size"
	
	<% if (house) { %>
	  value="<%= house.size %>"
	<% } %>
  >
</br>

<label  class="form-label" for="Description">Description</label>
  <input type="text" placeholDer="string" name="description"
	
