  <input type="text" placeholder="latitude" name="lat"
	
	<% if (house) { %>
	  value="<%= house.location.Latitude %>"
	<% } %>
  >
  <input class="form-label" type="text" placeholder="longitude" name="long"
	
	<% if (house) { %>
	  value="<%= house.location.Longitude %>"
	<% } %>
  >
</br>

  <label class="form-label" for="Photos">Photos</label>
  <input type="file" name="photos" multiple />
</br>

<label class="form-label" for="Photos"></label>
  <button type="submit">Submit</button>
